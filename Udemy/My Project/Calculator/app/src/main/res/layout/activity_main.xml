            android:textStyle="bold"
            app:icon="@drawable/mul"
            app:iconGravity="textStart"
            app:iconSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <Button
